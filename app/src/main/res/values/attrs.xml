<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AlterableBottomSheetLayout">
        <!-- Foreground background, required -->
        <attr name="foreground" format="reference" />
        <attr name="margin_top" format="dimension" />
        <attr name="is_draggable" format="boolean" />
        <attr name="is_hide_on_bg_click" format="boolean" />
        <attr name="background_color" format="color" />
        <attr name="foreground_height" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="foreground_type" format="enum">
            <enum name="default_type" value="0" />
            <enum name="without_hide" value="1" />
            <enum name="mixed" value="2" />
        </attr>
        <attr name="intermediate_height" format="dimension" />
        <attr name="foreground_color" format="color" />
        <attr name="top_corners" format="dimension" />
    </declare-styleable>
</resources>