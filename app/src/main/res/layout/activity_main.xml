        app:foreground_height="wrap_content"
        app:foreground_type="mixed"
        app:margin_top="128dp"
        app:transparency_percent="0.2">

        <FrameLayout
            android:id="@+id/vgBottomSheetFilters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="128dp"
            android:tag="I AM PARENT OF RECYCLER VIEW">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vRvBottomSheetFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:tag="I AM RECYCLER VIEW"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </FrameLayout>
